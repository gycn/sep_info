.container
  %h2 Interview Form
%br
.container
  = simple_form_for(@interview, :html => { id: "interview_form" }) do |f|
    = f.error_notification
    %b Candidate:
    = f.select :application_id, @user_list, {}, {:class => "form-control"}
    %br
    = f.input :interviewer_1, label: "Interviewer's Last Name #1", required: true
    = f.input :interviewer_2, label: "Interviewer's Last Name #2", required: true
    = f.input :interviewer_3, label: "Interviewer's Last Name #3"
    = f.input :gpa, label: "Candidate's GPA", required: true
    %br
    = f.label :score_1, "* What are three highlights from your resume? Please keep your answers brief."
    %table{:class => "table radio_table text-center"}
      %tr
        %td
          Not Accomplished
        %td
          = f.input :score_1, label: false, as: :radio_buttons, collection: [ 1,2,3,4,5,6,7 ], item_wrapper_class: 'radio-inline', required: true
        %td
          Highly Accomplished
      %tr
    = f.input :question_1, label:false, required: true
    %br
    = f.label :score_2, "* Why do you want to join SEP and what are you looking to gain?"
    %table{:class => "table radio_table text-center"}
      %tr
        %td
          Poor Expectations
        %td
          = f.input :score_2, label: false, as: :radio_buttons, collection: [ 1,2,3,4,5,6,7 ], item_wrapper_class: 'radio-inline', required: true
        %td
          Aspirational Expectations
      %tr
    = f.input :question_2, label:false, required: true
    %br
    = f.label :score_3, "* Tell me a skill or idea you have taught yourself in the last six months. How did you go about teaching yourself this new skill or idea, and what was the result?"
    %table{:class => "table radio_table text-center"}
      %tr
        %td
          Not Curious & Motivated
        %td
          = f.input :score_3, label: false, as: :radio_buttons, collection: [ 1,2,3,4,5,6,7 ], item_wrapper_class: 'radio-inline', required: true
        %td
          Highly Curious & Motivated
      %tr
    = f.input :question_3, label:false, required: true
    %br
    = f.label :score_4, "* What is the ideal business you would like to be apart of or start? Follow up: Now tell me 3 more in different industries (not specific startups we're looking for industries of interest)."
    %table{:class => "table radio_table text-center"}
      %tr
        %td
          Not Knowledgeable
        %td
          = f.input :score_4, label: false, as: :radio_buttons, collection: [ 1,2,3,4,5,6,7 ], item_wrapper_class: 'radio-inline', required: true
        %td
          Highly Knowledgeable
      %tr
    = f.input :question_4, label:false, required: true
    %br
    = f.label :score_5, "* Tell me about a startup you find interesting and why? follow-up with: can you think of any concerns with this product/startup?"
    %table{:class => "table radio_table text-center"}
      %tr
        %td
          Poor Critical Thinking
        %td
          = f.input :score_5, label: false, as: :radio_buttons, collection: [ 1,2,3,4,5,6,7 ], item_wrapper_class: 'radio-inline', required: true
        %td
          Advanced Critical Thinking
      %tr
    = f.input :question_5, label:false, required: true
    %br
    = f.label :score_6, "* Market sizing questions, these could include, find the number of red cups used in 1 day at Berkeley or the number of people in USA who enjoy electronic music?"
    %table{:class => "table radio_table text-center"}
      %tr
        %td
          Poor Structure and Analysis
        %td
          = f.input :score_6, label: false, as: :radio_buttons, collection: [ 1,2,3,4,5,6,7 ], item_wrapper_class: 'radio-inline', required: true
        %td
          Advanced Structure and Analysis
      %tr
    = f.input :question_6, label:false, required: true
    %br
    = f.label :overall, "* Overall Candidate Rating"
    %table{:class => "table radio_table text-center"}
      %tr
        %td
          Terrible Candidate
        %td
          = f.input :overall, label: false, as: :radio_buttons, collection: [ 1,2,3,4,5,6,7 ], item_wrapper_class: 'radio-inline', required: true
        %td
          Amazing Candidate
      %tr
    %br
    = f.input :question_7, label: "What do you know about the pledge process so far?", required: true
    = f.input :question_8, label: "Do you have any questions for us?", required: true
    = f.input :comments, label: "Intangible Additions to Interview", required: true
    = f.button :submit, "Submit"
:javascript
  $("#interview_form").validate();
